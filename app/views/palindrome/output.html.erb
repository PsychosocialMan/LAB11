<div class='header'>Количество чисел, удовлетворяющих условию: <%= @num %></div>
<center>
  <% if (@num != 0) %>
  	<table border='1'>
	  	<caption>Ответ</caption>
		  <tr>
			  <th>Палиндром</th>
			  <th>Квадрат палиндрома</th>
		  </tr>
      <% @result_array.each_with_index do |elem, i| %>
      <tr>
        <td><%= elem %></td>
        <td><%= @square_array[i] %></td>
      </tr>
      <% end %>
	  </table>
  <% else %>
    <div id='error'> Неверные входные данные! </div>
  <% end %>

  <%= link_to('Повторить', '/') %>
</center>
